<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/qtyinvalidrespon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:background="@drawable/edittext_white_border"
        android:padding="3dp">
        <TextView
            android:id="@+id/item_Name_"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView

            android:layout_width="2dp"

            android:gravity="center"
android:visibility="invisible"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/item_code_"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView

            android:layout_width="2dp"

            android:gravity="center"
android:visibility="invisible"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryDark"
            />

        <EditText
            android:id="@+id/item_Qty"
            android:layout_width="100dp"
            android:layout_weight="1.2"
            android:gravity="center"
android:inputType="number"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView

            android:layout_width="2dp"

            android:gravity="center"
android:visibility="invisible"
            android:layout_height="match_parent"

            android:background="@color/colorPrimaryDark"
            />
        <EditText
            android:id="@+id/free"
            android:layout_width="60dp"
            android:layout_weight="1.2"
            android:selectAllOnFocus="true"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView

            android:layout_width="2dp"

            android:gravity="center"
            android:visibility="invisible"
            android:layout_height="match_parent"

            android:background="@color/colorPrimaryDark"
            />
        <EditText
            android:id="@+id/discount"
            android:layout_width="60dp"
            android:layout_weight="1.2"
android:selectAllOnFocus="true"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
android:drawableEnd="@drawable/ic_baseline_percent_24"
            />
        <TextView

            android:layout_width="2dp"

            android:gravity="center"
            android:visibility="invisible"
            android:layout_height="match_parent"

            android:background="@color/colorPrimaryDark"
            />
        <EditText
            android:id="@+id/price"
            android:layout_width="100dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <TextView

            android:layout_width="2dp"

            android:gravity="center"
            android:visibility="invisible"
            android:layout_height="match_parent"

            android:background="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="100dp"
            android:layout_weight="1.2"
            android:gravity="center"

            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="30dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/reomveItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_remove_circle_24"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>